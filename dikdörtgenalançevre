using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace AlanHesaplama
{
    internal class Program
    {
        static void Main(string[] args)
        {

            int sonuc;
            int sonuc2;

            Console.WriteLine("Lütfen Kısa Kenarın Uzunluğunu Giriniz : ");
            int kenar1 = int.Parse(Console.ReadLine());
            Console.WriteLine("Lütfen Uzun Kenarın Uzunluğunu Giriniz : ");
            int kenar2 = int.Parse(Console.ReadLine());

            sonuc = kenar1 * kenar2;

            Console.WriteLine(" Dikdörtgenin Alanı : {0}", sonuc);

            sonuc2 = kenar1 + kenar2 * 2;

            Console.WriteLine(" Dikdörtgenin Çevresi : {0}", sonuc2);

            Console.ReadLine();


        }
    }
}
